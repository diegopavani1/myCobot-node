{
  "name": "mycobot-node",
  "version": "0.1.1",
  "author": "Diego Pavani",
  "license": "MIT",
  "description": "Node.js library for controlling the myCobot 280 arm with M5Stack",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/lib",
    "dist/index.js",
    "dist/index.d.ts",
    "dist/index.js.map",
    "dist/index.d.ts.map",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "npm run build && node dist/examples/cli-demo.js",
    "demo": "npm run build && node dist/examples/cli-demo.js",
    "detect-port": "npm run build && node dist/examples/detect-port.js",
    "test-connection": "npm run build && node dist/examples/test-connection.js",
    "dev": "tsc --watch & nodemon dist/examples/cli-demo.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run clean && npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor", 
    "version:major": "npm version major",
    "release:patch": "npm run version:patch",
    "release:minor": "npm run version:minor",
    "release:major": "npm run version:major"
  },
  "keywords": [
    "mycobot",
    "robotics",
    "serial",
    "robot-arm",
    "m5stack",
    "automation"
  ],
  "dependencies": {
    "serialport": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diegopavani1/mycobot-controller.git"
  },
  "bugs": {
    "url": "https://github.com/diegopavani1/mycobot-controller/issues"
  },
  "homepage": "https://github.com/diegopavani1/mycobot-controller#readme"
}
